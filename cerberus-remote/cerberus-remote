#! /bin/bash

UID_LENGTH=8

new_uid () {
    env LC_CTYPE=C tr -dc "a-zA-Z0-9" < /dev/urandom | head -c $UID_LENGTH
}

usage () {
    echo "Usage: "
    echo "  $0 find <dir> <project-name>"
    echo "  $0 init <git_dir> <project-name>"
    echo ""
    echo "$1"
    exit 1
}

POST_RECEIVE="$(pwd)/post-receive"

if [ $# -ne 3 ] ; then
    usage $0 "Missing command."
fi

if [ "$1" = "find" ]; then

    cd $2

    PROJ_PATH=$(ls | grep ".\{$UID_LENGTH\}-$3\$")
    if [ -z "$PROJ_PATH" ]; then
        PROJ_UID="$(new_uid)"
        PROJ_PATH="$PROJ_UID-$3"
        while [ -d "$PROJ_PATH" ]; do
            PROJ_UID="$(new_uid)"
            PROJ_PATH="$PROJ_UID-$3"
        done
        mkdir "$PROJ_PATH"
    fi

    echo "$PROJ_PATH"

elif [ "$1" = "init" ]; then

    cd $2

    GIT_FOLDER="$3.git"
    if [ -n "$GIT_FOLDER" ]; then
        git init --bare "$GIT_FOLDER"
        cp $POST_RECEIVE "$GIT_FOLDER/hooks/post-receive"
        chmod +x "$GIT_FOLDER/hooks/post-receive"
    fi

else
    usage $0 "Unrecognized command $1"
fi
